@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="bg-light rounded-3 mt-3 p-3">
    <h1 class="text-danger">
        <a asp-controller="Home" asp-action="Index" class="btn">
            <img alt="PatterPal Logo" src="~/img/logo.svg" height="50" width="50" />
        </a>Error.
    </h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>Please tell us about the error you experienced under <strong><a href="https://github.com/malthee/patter-pal/issues">https://github.com/malthee/patter-pal/issues</a></strong>
        so we can fix it as soon as possible.</p>
</div>
